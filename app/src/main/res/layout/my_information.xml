<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_name_mess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/user_name" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="12sp"
                android:text="user_name" />

            <TextView
                android:id="@+id/user_sex_mess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="18sp"
                android:text="@string/user_sex" />

            <TextView
                android:id="@+id/user_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="12sp"
                android:text="user_sex" />

            <TextView
                android:id="@+id/user_college_mess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="18sp"
                android:text="@string/user_college" />

            <TextView
                android:id="@+id/user_college"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="12sp"
                android:text="user_college" />

            <TextView
                android:id="@+id/user_classname_mess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/user_classname" />

            <TextView
                android:id="@+id/user_classname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="user_classname" />

            <TextView
                android:id="@+id/user_qq_mess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/user_qq" />

            <TextView
                android:id="@+id/user_qq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="user_qq" />

            <TextView
                android:id="@+id/user_phone_mess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/user_phone" />

            <TextView
                android:id="@+id/user_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="user_phone" />

            <TextView
                android:id="@+id/user_email_mess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/user_email" />

            <TextView
                android:id="@+id/user_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="user_email" />

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>
</LinearLayout>
